<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include('../partials/head') %>

  <body>
    <!-- Header -->
    <%- include('../partials/header') %>

    <!-- div -->
    <div class="box">
      <div class="box-register">
        <h2>Perfil de Usuario</h2>
        <%- include('../partials/errors') %>

        <form
          action="/users/edit/<%= user.id %>?_method=PUT"
          method="POST"
          enctype="multipart/form-data"
          id="formEditUser"
        >
          <div class="full-name">
            <div class="name">
              <label class="l-name" for="user-name">Nombre</label>
              <input
                class="text-input"
                type="text"
                name="firstName"
                id="user-name"
                value="<%= user.name %>"
              />
            </div>

            <div class="last-name">
              <label class="l-name" for="user-last-name">Apellido</label>
              <input
                class="text-input"
                type="text"
                name="lastName"
                id="user-last-name"
                value="<%= user.lastName %>"
              />
            </div>
          </div>
          <div class="email-box">
            <label for="avatar">Selecciona imagen</label>
            <input type="file" name="avatar" id="avatar" />
          </div>

          <div class="password-box">
            <label class="l-password" for="user-password">Contrase単a</label>
            <input
              class="text-input"
              type="password"
              name="password"
              id="user-password"
              placeholder="Ingrese su nueva contrase単a"
            />
          </div>

          <div class="confirm-password-box">
            <label class="l-password" for="confirm-user-password"
              >Confirmar contrase単a</label
            >
            <input
              class="text-input"
              type="password"
              name="confirm-user-password"
              id="confirm-user-password"
              placeholder="Confirme su contrase単a"
            />
          </div>

          <input class="button-submit" type="submit" value="Guardar Cambios" />
        </form>

        <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
          <input class="button-submit" type="submit" value="Eliminar Cuenta" />
        </form>
      </div>
    </div>

    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
  </body>
  <script src="/js/userUpdateValidation.js"></script>
</html>
