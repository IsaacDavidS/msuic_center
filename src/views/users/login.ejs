<!DOCTYPE html>
<html lang="en">
  <!-- Inicio del head -->
  <%- include('../partials/head') %>

  <body>
    <!-- Inicio de header -->
    <%- include('../partials/header') %>

    <!-- Inicio de div principal -->
    <div class="box">
      <div class="box-login">
        <h2>Iniciar Sesión</h2>
        <%- include('../partials/errors') %>

        <form action="/users/login" method="POST" id="formLogin">
          <div class="email-box">
            <label class="l-email" for="email">Email</label>
            <input
              class="text-input"
              type="text"
              name="email"
              id="email"
              placeholder="Escriba aquí su email"
            />
          </div>

          <div class="password-box">
            <label class="l-password" for="password">Contraseña</label>
            
            <input
              class="text-input"
              type="password"
              name="password"
              id="password"
              placeholder="Ingrese su contraseña"
            />
          </div>

          <div class="keep-login">
            <label
              ><input
                type="checkbox"
                name="rememberMe"
                id="remember-me"
                value="remember-me"
              />Mantener sesión iniciada</label
            >
          </div>

          <input class="button-submit" type="submit" value="Inciar sesión" />
        </form>

        
      </div>
    </div>

    <!-- Inicio del footer -->
    <%- include('../partials/footer.ejs') %>
  </body>

  <script src="/js/loginValidation.js"></script>
</html>
