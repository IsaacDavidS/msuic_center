<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('../partials/head.ejs') %>

    <body>
        <!-- Header -->
        <%- include('../partials/header') %>

            
            <section class="productosDestacados__main">
                <h2>Â¡Elige y prende la fiesta!</h2>
                <% if(locals && locals.user && user.isAdmin) {%>
                    <div class="btn__crear--flex ">
                        <a href="/products/create"><button class="btn btn__crear">Agregar <i
                                    class="far fa-plus-square"></i></button></a>
                    </div>
                    <% } %>
                        <% products.forEach(producto=> { %>
                            <%- include('../partials/product', {producto})%>

                                <% });%>
            </section>
            
            <div class="btn__pagination">

                <%if(page> 1){ %>
                    <a href="/products?page=<%= page-1  %> "><button class="btn">
                            <i class="fas fa-angle-left"></i></button></a>
                    <% } %>
                        <% if(page < pages){ %>
                            <a href="/products?page=<%= page+1  %> "><button class="btn">
                                    <i class="fas fa-angle-right"></i></button></a>
                            <% } %>

            </div>
            <!-- Footer -->
            <%- include('../partials/footer.ejs') %>

    </body>
    <script src="/js/agregarProducto.js"></script>

</html>