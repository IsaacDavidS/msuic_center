<!DOCTYPE html>
<html lang="en">
<!-- Inicio de head -->
<%- include('./partials/head.ejs') %>

  <body>
    <!-- Inicio de header -->
    <%- include('./partials/header') %>

      <!-- Inicio de main -->
      <main class="background">
        <!-- Inicio de Carousel -->
        <div class="carousel__main">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="/images/back-1.jpg" alt="Second slide" />
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/images/back-2.jpg" alt="First slide" />
              </div>
              <div class="carousel-item carousel__img6">
                <img class="d-block w-100" src="/images/back-3.jpg" alt="Third slide" />
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            </a>
          </div>
        </div>

        <!-- Productos a mostrar -->
        <section class="productosDestacados__main">
          <h2>Lo m√°s Cool del momento</h2>
          <% products.forEach(producto=> { %>
            <%- include('./partials/product', {producto})%>
              <% });%>



        
      </main>

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>

